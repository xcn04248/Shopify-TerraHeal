<div
  class='review-avatars review-avatars--{{ block.settings.avatars_size }} review-avatars--{{ block.settings.avatars_position }} isolate flex-justify-{{ block.settings.alignment }} {{ block.settings.visibility }}'
  style="
    --avatar-size:{{ block.settings.avatar_size | divided_by: 10.0 }}rem;
    --avatar-offset:{{ block.settings.avatar_offset | divided_by: 10.0 }}rem;
    --corner-radius:{{ block.settings.corner_radius | divided_by: 10.0 }}rem;
    --icon-size:{{ block.settings.checkmark_size | divided_by: 10.0 }}rem;
    --star-color:{{ block.settings.star_color }};
    margin-top: {{ block.settings.margin_top | divided_by: 10.0 }}rem;
    margin-bottom: {{ block.settings.margin_bottom | divided_by: 10.0 }}rem;
  "
  {{ block.shopify_attributes }}
  role="region"
>
  {% if item_count > 0 %}
    <div class="review-avatars__avatars-container flex isolate">
      {% for i in (1..5) %}
        {% liquid
          case i 
            when 1
              assign avatar = block.settings.avatar_1
              assign verified = block.settings.avatar_1_verified
            when 2
              assign avatar = block.settings.avatar_2
              assign verified = block.settings.avatar_2_verified
            when 3
              assign avatar = block.settings.avatar_3
              assign verified = block.settings.avatar_3_verified
            when 4
              assign avatar = block.settings.avatar_4
              assign verified = block.settings.avatar_4_verified
            when 5
              assign avatar = block.settings.avatar_5
              assign verified = block.settings.avatar_5_verified
          endcase
        %}
        {% if avatar != blank %}
          <div class="review-avatars__avatar{% if verified %} review-avatars__avatar--verified{% endif %}">
            <img
              src="{{ avatar | image_url }}"
              {% if avatar.alt != blank %}
                alt="{{ avatar.alt }}{% if verified %} (Verified reviewer){% endif %}"
              {% else %}
                alt="Customer avatar{% if verified %} (Verified reviewer){% endif %}"
              {% endif %}
                role="presentation"
              width="auto"
              height="auto"
              loading="lazy"
            >
            {{ checkmark }}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
  {% if block.settings.text_1_line_1 != blank or block.settings.text_1_line_2 != blank %}
    <div
      class="review-avatars__text review-avatars__text-1{% if block.settings.text_1_stretch_height %} review-avatars__text--stretch{% endif %} custom-bg custom-border-hex text-color isolate"
      style="
        --text-color:{{ block.settings.text_1_color }};
        --bg-color:{{ block.settings.text_1_bg_color }};
        --border-thickness:{{ block.settings.text_1_border_size }}px;
        --border-color:{{ block.settings.text_1_border_color }};
        --offset:{{ block.settings.text_1_offset | divided_by: 10.0 }}rem;
        --padding-offset:{% if block.settings.text_1_offset < 0 %}{{ block.settings.text_1_offset | times: -1.0 | divided_by: 10.0 }}{% else %}0{% endif %}rem;
        --padding-y: {{ block.settings.text_1_padding_y | divided_by: 10.0 }}rem;
        --padding-x: {{ block.settings.text_1_padding_x | divided_by: 10.0 }}rem;
      "
    >
      {% if block.settings.text_1_line_1 != blank %}
        <div class="font-size" style="--font-size: {{ block.settings.text_1_line_1_size | divided_by: 10.0 }}rem;">
          {{ block.settings.text_1_line_1 | replace: '[stars]', stars }}
        </div>
      {% endif %}
      {% if block.settings.text_1_line_2 != blank %}
        <div class="font-size" style="--font-size: {{ block.settings.text_1_line_2_size | divided_by: 10.0 }}rem;">
          {{ block.settings.text_1_line_2 | replace: '[stars]', stars }}
        </div>
      {% endif %}
    </div>
  {% endif %}
  {% if block.settings.text_2_line_1 != blank or block.settings.text_2_line_2 != blank %}
    <div
      class="review-avatars__text{% if block.settings.text_2_stretch_height %} review-avatars__text--stretch{% endif %} custom-bg custom-border-hex text-color isolate"
      style="
        --text-color:{{ block.settings.text_2_color }};
        --bg-color:{{ block.settings.text_2_bg_color }};
        --border-thickness:{{ block.settings.text_2_border_size }}px;
        --border-color:{{ block.settings.text_2_border_color }};
        --offset:{{ block.settings.text_2_offset | divided_by: 10.0 }}rem;
        --padding-offset:{% if block.settings.text_2_offset < 0 %}{{ block.settings.text_2_offset | times: -1.0 | divided_by: 10.0 }}{% else %}0{% endif %}rem;
        --padding-y: {{ block.settings.text_2_padding_y | divided_by: 10.0 }}rem;
        --padding-x: {{ block.settings.text_2_padding_x | divided_by: 10.0 }}rem;
      "
    >
      {% if block.settings.text_2_line_1 != blank %}
        <div class="font-size" style="--font-size: {{ block.settings.text_2_line_1_size | divided_by: 10.0 }}rem;">
          {{ block.settings.text_2_line_1 | replace: '[stars]', stars }}
        </div>
      {% endif %}
      {% if block.settings.text_2_line_2 != blank %}
        <div class="font-size" style="--font-size: {{ block.settings.text_2_line_2_size | divided_by: 10.0 }}rem;">
          {{ block.settings.text_2_line_2 | replace: '[stars]', stars }}
        </div>
      {% endif %}
    </div>
  {% endif %}
</div>

