      "label": "Display on",
      "default": "always-display"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "alignment",
      "options": [
        {
          "value": "start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "end",
          "label": "Right"
        }
        ],
      "label": "Alignment",
      "default": "start"
    },
    {
      "type": "range",
      "id": "corner_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Corner radius",
      "default": 30,
      "info": "Applied to avatars & text containers"
    },
    {
      "type": "select",
      "id": "avatars_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "label": "Avatars position",
      "default": "left"
    },
    {
      "type": "range",
      "id": "avatar_size",
      "min": 20,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 40,
      "label": "Avatars size"
    },
    {
      "type": "range",
      "id": "avatar_offset",
      "min": -30,
      "max": 30,
      "step": 2,
      "unit": "px",
      "default": -10,
      "label": "Avatars offset",
      "info": "Not applied to the avatar on the far edge"
    },
    {
      "type": "color",
      "id": "checkmark_color",
      "default": "#6D388B",
      "label": "Verified checkmark background color"
    },
    {
      "type": "color",
      "id": "checkmark_icon_color",
      "default": "#FFFFFF",
      "label": "Verified checkmark icon color"
    },
    {
      "type": "range",
      "id": "checkmark_size",
      "min": 10,
      "max": 30,
      "step": 2,
      "unit": "px",
      "default": 20,
      "label": "Verified checkmark icon size"
    },
    {
      "type": "color",
      "id": "star_color",
      "default": "#ffcc00",
      "label": "Stars color"
    },
    {
      "type": "range",
      "id": "stars_translate",
