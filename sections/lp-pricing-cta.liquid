{%- style -%}
  .lp-pricing {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 20px;
    text-align: center;
  }
  .lp-pricing__urgency {
    background: #fff3cd;
    border: 2px dashed #ffc107;
    padding: 20px;
    border-radius: 12px;
    margin-bottom: 30px;
    font-size: 18px;
    font-weight: bold;
  }
  .lp-pricing__box {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border: 3px solid #28a745;
    border-radius: 16px;
    padding: 40px 30px;
    margin-bottom: 30px;
  }
  .lp-pricing__original {
    font-size: 24px;
    color: #999;
    text-decoration: line-through;
    margin-bottom: 10px;
  }
  .lp-pricing__current {
    font-size: 48px;
    font-weight: bold;
    color: #28a745;
    margin-bottom: 10px;
  }
  .lp-pricing__discount {
    display: inline-block;
    background: #dc3545;
    color: #fff;
    padding: 8px 20px;
    border-radius: 20px;
    font-weight: bold;
    font-size: 16px;
    margin-bottom: 20px;
  }
  .lp-pricing__cta {
    display: block;
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    color: #fff;
    font-size: 22px;
    font-weight: bold;
    text-transform: uppercase;
    padding: 20px 40px;
    border-radius: 50px;
    text-decoration: none;
    margin: 30px auto;
    max-width: 500px;
    box-shadow: 0 4px 15px rgba(40, 167, 69, 0.4);
    transition: all 0.3s ease;
  }
  .lp-pricing__cta:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(40, 167, 69, 0.5);
  }
  .lp-pricing__guarantee {
    background: #e8f5e9;
    border-radius: 12px;
    padding: 25px;
    margin: 30px 0;
  }
  .lp-pricing__guarantee h3 {
    color: #28a745;
    margin-bottom: 15px;
    font-size: 20px;
  }
  .lp-pricing__badges {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 20px;
    margin-top: 30px;
  }
  .lp-pricing__badge {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: #666;
  }
  .lp-pricing__badge svg {
    color: #28a745;
    width: 20px;
    height: 20px;
  }
  .lp-pricing__badge-img {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }
  
  @media (max-width: 749px) {
    .lp-pricing__current { font-size: 36px; }
    .lp-pricing__cta { font-size: 18px; padding: 15px 30px; }
  }
{%- endstyle -%}

<section class="lp-pricing">
  {%- if section.settings.urgency_text != blank -%}
    <div class="lp-pricing__urgency">
      ⚠️ {{ section.settings.urgency_text }}
    </div>
  {%- endif -%}
  
  <div class="lp-pricing__box">
    <div class="lp-pricing__original">${{ section.settings.original_price }}</div>
    <div class="lp-pricing__current">${{ section.settings.sale_price }}</div>
    <span class="lp-pricing__discount">{{ section.settings.discount_label }}</span>
    
    <a href="{{ section.settings.cta_link }}" class="lp-pricing__cta">
      {{ section.settings.cta_text }}
    </a>
  </div>
  
  <div class="lp-pricing__guarantee">
    <h3>{{ section.settings.guarantee_title }}</h3>
    <p>{{ section.settings.guarantee_text }}</p>
  </div>
  
  <div class="lp-pricing__badges">
    <div class="lp-pricing__badge">
      <img src="{{ 'lp-badge-90day.png' | asset_url }}" alt="90 Day Guarantee" class="lp-pricing__badge-img">
      <span>90 Day Money Back Guarantee</span>
    </div>
    <div class="lp-pricing__badge">
      <img src="{{ 'lp-badge-shipping.png' | asset_url }}" alt="Fast Shipping" class="lp-pricing__badge-img">
      <span>Fast & Free Shipping</span>
    </div>
    <div class="lp-pricing__badge">
      <img src="{{ 'lp-badge-secure.png' | asset_url }}" alt="Secure Checkout" class="lp-pricing__badge-img">
      <span>Safe and Secure Checkout</span>
    </div>
    <div class="lp-pricing__badge">
      <img src="{{ 'lp-badge-returns.png' | asset_url }}" alt="Easy Returns" class="lp-pricing__badge-img">
      <span>No-Hassle Returns</span>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "LP Pricing CTA",
  "tag": "section",
  "settings": [
    {
      "type": "textarea",
      "id": "urgency_text",
      "label": "Urgency Text",
      "default": "We Might Sell Out By Tomorrow… Or Maybe Even Today!"
    },
    {
      "type": "text",
      "id": "original_price",
      "label": "Original Price",
      "default": "139"
    },
    {
      "type": "text",
      "id": "sale_price",
      "label": "Sale Price",
      "default": "69"
    },
    {
      "type": "text",
      "id": "discount_label",
      "label": "Discount Label",
      "default": "50% OFF - LIMITED TIME"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "GET 50% OFF The Grounding Co Mat Now!"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "text",
      "id": "guarantee_title",
      "label": "Guarantee Title",
      "default": "Try the Grounding Mat for 90 Days, Completely Risk-Free!"
    },
    {
      "type": "textarea",
      "id": "guarantee_text",
      "label": "Guarantee Text",
      "default": "If you're dissatisfied with the health benefits in any way, just let us know and get a full refund. No questions asked."
    }
  ],
  "presets": [
    {
      "name": "LP Pricing CTA"
    }
  ]
}
{% endschema %}
