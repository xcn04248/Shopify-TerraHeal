{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Blog Card Layout */
  .blog-card {
    display: flex;
    height: 100%;
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .blog-card__link {
    display: flex;
    width: 100%;
    text-decoration: none;
    color: inherit;
  }

  .blog-card__image {
    flex: 0 0 50%;
    position: relative;
    overflow: hidden;
  }

  .blog-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .blog-card__content {
    flex: 0 0 50%;
    padding: 24px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .blog-card__date {
    font-size: {{ section.settings.date_font_size }}px;
    color: {{ section.settings.date_color }};
    font-weight: {{ section.settings.date_font_weight }};
    margin-bottom: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .blog-card__title {
    font-size: {{ section.settings.title_font_size }}px;
    color: {{ section.settings.title_color }};
    font-weight: {{ section.settings.title_font_weight }};
    margin: 0 0 12px 0;
    line-height: 1.3;
  }

  .blog-card__excerpt {
    font-size: {{ section.settings.excerpt_font_size }}px;
    color: {{ section.settings.excerpt_color }};
    font-weight: {{ section.settings.excerpt_font_weight }};
    line-height: 1.6;
    margin-bottom: 16px;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: {{ section.settings.excerpt_lines }};
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-card__read-more {
    font-size: {{ section.settings.read_more_font_size }}px;
    color: {{ section.settings.read_more_color }};
    font-weight: {{ section.settings.read_more_font_weight }};
    text-decoration: underline;
    display: inline-block;
  }

  .blog-card__link:hover .blog-card__read-more {
    text-decoration: none;
  }

  /* Mobile adjustments */
  @media screen and (max-width: 749px) {
    .blog-card__content {
      padding: 16px;
    }

    .blog-card__date {
      font-size: calc({{ section.settings.date_font_size }}px * 0.9);
      margin-bottom: 8px;
    }

    .blog-card__title {
      font-size: calc({{ section.settings.title_font_size }}px * 0.85);
      margin-bottom: 8px;
    }

    .blog-card__excerpt {
      font-size: calc({{ section.settings.excerpt_font_size }}px * 0.9);
      margin-bottom: 12px;
    }

    .blog-card__read-more {
      font-size: calc({{ section.settings.read_more_font_size }}px * 0.9);
    }
  }

  /* Placeholder for no image */
  .blog-card__image--placeholder {
    background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .blog-card__image--placeholder::after {
    content: "No Image";
    color: #999;
    font-size: 14px;
  }
{%- endstyle -%}

<div class="blogs-slider section-{{ section.id }}-padding {{ section.settings.visibility }}">
  <div class="page-width">
    {%- liquid
      assign blog = section.settings.blog
      assign articles_count = section.settings.articles_count
    -%}

    {%- if blog == blank -%}
      <div style="text-align: center; padding: 60px 20px; color: #999;">
        <p>Please select a blog in the section settings.</p>
      </div>
    {%- elsif blog.articles.size == 0 -%}
      <div style="text-align: center; padding: 60px 20px; color: #999;">
        <p>No articles found in this blog.</p>
      </div>
    {%- else -%}
      <splide-component
        data-type="{{ section.settings.slider_type }}"
        data-autoplay="{{ section.settings.autoplay }}"
        data-autoplay-speed="{{ section.settings.autoplay_speed }}"
        data-slides-desktop="2"
        data-per-move-desktop="1"
        data-gap-desktop="{{ section.settings.desktop_spacing }}"
        data-slides-mobile="1"
        data-gap-mobile="15"
        data-side-padding-mobile="15"
      >
        <div class="splide splide--desktop-dots-{{ section.settings.desktop_dots_position }} splide--mobile-dots-{{ section.settings.mobile_dots_position }} splide--desktop-arrows-{{ section.settings.desktop_arrows_position }} splide--mobile-arrows-{{ section.settings.mobile_arrows_position }} splide--desktop-arrows-outside">
          <div class="splide__track">
            <ul class="splide__list">
              {%- for article in blog.articles limit: articles_count -%}
                <li class="splide__slide">
                  <div class="blog-card">
                    <a href="{{ article.url }}" class="blog-card__link">
                      <div class="blog-card__image{% unless article.image %} blog-card__image--placeholder{% endunless %}">
                        {%- if article.image -%}
                          {%- capture sizes -%}
                            (min-width: 990px) 450px, (min-width: 750px) 400px, calc(50vw - 20px)
                          {%- endcapture -%}
                          {{
                            article.image
                            | image_url: width: 900
                            | image_tag:
                              loading: 'lazy',
                              sizes: sizes,
                              widths: '300, 400, 450, 600, 900',
                              alt: article.image.alt | default: article.title
                          }}
                        {%- endif -%}
                      </div>
                      <div class="blog-card__content">
                        <div>
                          <div class="blog-card__date">
                            {{ article.published_at | date: "%B %d, %Y" }}
                          </div>
                          <h3 class="blog-card__title">{{ article.title }}</h3>
                          <div class="blog-card__excerpt">
                            {%- if article.excerpt != blank -%}
                              {{ article.excerpt | strip_html | truncate: 150 }}
                            {%- else -%}
                              {{ article.content | strip_html | truncate: 150 }}
                            {%- endif -%}
                          </div>
                        </div>
                        <span class="blog-card__read-more">Read More â†’</span>
                      </div>
                    </a>
                  </div>
                </li>
              {%- endfor -%}
            </ul>
          </div>
          <div class="splide__dots-and-arrows">
            <ul class="splide__pagination"></ul>
            <div class="splide__arrows"></div>
          </div>
        </div>
      </splide-component>
    {%- endif -%}
  </div>
</div>

