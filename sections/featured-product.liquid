    rel="stylesheet"
    href="{{ 'component-model-viewer-ui.css' | asset_url }}"
    media="print"
    onload="this.media='all'"
  >
{%- endif -%}

<section class="color-{{ section.settings.color_scheme }} {% if section.settings.secondary_background %}background-secondary{% else %}gradient{% endif %} content-for-grouping {{ section.settings.visibility }}">
  {% if section.settings.display_id %}
    <copy-button class="section-id-btn button" data-content="#shopify-section-{{ section.id }}" data-success="false">
      <span class="copy-text">Click to copy section ID</span>
      <span class="copy-success">ID copied successfully!</span>
    </copy-button>
  {% endif %}

  {%- liquid
    assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src'

    assign has_filtering = false
    if section.settings.variant_image_filtering != 'none'
      assign has_filtering = true
    endif

    assign hide_variants_enabled = false
    if section.settings.hide_variants and has_filtering != true
      assign hide_variants_enabled = true
    endif

    if hide_variants_enabled and variant_images.size == product.media.size
      assign single_media_visible = true
    endif

    assign media_count = product.media.size
    if hide_variants_enabled and media_count > 1 and variant_images.size > 0
      assign media_count = media_count | minus: variant_images.size | plus: 1
    endif

    if media_count == 1 or single_media_visible
      assign single_media_visible_mobile = true
    endif

    if media_count == 0 or single_media_visible_mobile or section.settings.mobile_thumbnails_position != 'hidden' and media_count < 3
      assign hide_mobile_slider = true
    endif
  -%}
  <div class="page-width section-{{ section.id }}-padding{% if section.settings.secondary_background %} isolate{% endif %}">
    <div class="featured-product product--product-images-{{ section.settings.product_images }} product product--{{ section.settings.media_size }} grid grid--1-col gradient color-{{ section.settings.color_scheme }} product--{{ section.settings.media_position }} product--{{ section.settings.gallery_layout }}{% if section.settings.secondary_background == false %} isolate{% endif %} {% if product.media.size > 0 %}grid--2-col-tablet{% else %}product--no-media{% endif %} isolate">
      <div class="grid__item product__media-wrapper{% if section.settings.media_position == 'right' %} medium-hide large-up-hide{% endif %}{% if section.settings.enable_sticky_info %} product__column-sticky{% endif %}{% if product == blank %} hidden{% endif %}">
        {% render 'product-media-gallery', product: product, variant_images: variant_images, has_filtering: has_filtering, section %}
      </div>
      <div class="product__info-wrapper grid__item{% if settings.page_width > 1400 and section.settings.media_size == "small" %} product__info-wrapper--extra-padding{% endif %}{% if section.settings.enable_sticky_info %} product__column-sticky{% endif %}{% if section.settings.mobile_pagination == 'dots_overlay' or hide_mobile_slider or section.settings.product_images == 'one' %} product__info-wrapper--top-padding{% endif %}">
        <product-info
          id="ProductInfo-{{ section.id }}"
          class="product__info-container block-margins"
          data-section="{{ section.id }}"
          data-url="{{ product.url }}"
        >
          {%- assign product_form_id = 'product-form-' | append: section.id -%}

          {% content_for 'blocks' %}
        </product-info>
      </div>
      {%- if section.settings.media_position == 'right' -%}
        <div class="grid__item product__media-wrapper small-hide{% if product == blank %} hidden{% endif %}">
          {% render 'product-media-gallery', product: product, variant_images: variant_images, is_duplicate: true %}
        </div>
      {%- endif -%}
    </div>
    {% render 'product-media-modal', product: product, variant_images: media_to_render %}
  </div>
</section>

{%- if section.settings.image_zoom == 'hover' -%}
  <script id="EnableZoomOnHover-featured" src="{{ 'magnify.js' | asset_url }}" defer="defer"></script>
{%- endif %}
{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

